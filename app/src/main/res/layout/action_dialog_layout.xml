<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="HardcodedText">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:alpha=".3"
        android:background="@color/black" />

    <TextView
        android:id="@+id/addMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Add 10000 Message" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:alpha=".3"
        android:background="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/updateFirst"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Update First 100 Random Message"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:alpha=".3"
        android:background="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/updateLast"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Update Last 100 Random Message"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:alpha=".3"
        android:background="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/deleteFirst"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Delete First 100 Message"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:alpha=".3"
        android:background="@color/black"
        android:visibility="gone" />

    <TextView
        android:visibility="gone"
        android:id="@+id/deleteLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Delete Last 1000 Message" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:alpha=".3"
        android:background="@color/black" />

    <TextView
        android:id="@+id/deleteAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Delete All Message" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:alpha=".3"
        android:background="@color/black" />

</LinearLayout>